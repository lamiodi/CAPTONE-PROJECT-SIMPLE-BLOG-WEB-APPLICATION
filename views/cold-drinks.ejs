                                <option value="juice-smoothies">Juice & Smoothies</option>
                              </select>
                            </div>
                            
                            <button type="submit" class="btn" style="background-color: #FFD23F; color: #0B3954;">Upload Blog Post</button>
                            
                            <div id="status"></div>
                          </form>
                          
                        </div>
