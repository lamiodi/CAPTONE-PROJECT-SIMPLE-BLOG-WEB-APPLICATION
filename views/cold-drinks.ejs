                              </div>
                              <div class="col-lg-6">
                                  <div class="card-body pt-lg-3 pb-lg-1">
                                      <p class="card-text">
                                          <strong>Ingredients:</strong>
                                          <ul class="mb-lg-2">
                                              <% if (post.ingredient) { %>
                                                  <% post.ingredient.split(',').forEach((ingredient) => { %>
                                                      <li><%= ingredient %></li>
                                                  <% }) %>
                                              <% } else { %>
                                                  <li>No ingredients listed</li>
                                              <% } %>
                                          </ul>
                                          <strong>
                                              <a class="btn mt-3" style="background-color: #FFD23F; color: #0B3954;" data-toggle="collapse" href="#instructions-<%= post.id %>" role="button" aria-expanded="false" aria-controls="instructions-<%= post.id %>">
                                                  View Instructions
                                              </a>
                                          </strong>
                                          <div class="collapse" id="instructions-<%= post.id %>">
                                              <ol class="mt-3 mb-0">
                                                  <% if (post.instruction) { %>
                                                      <% post.instruction.split(',').forEach((instruction) => { %>
                                                          <li><%= instruction %></li>
                                                      <% }) %>
                                                  <% } else { %>
                                                      <li>No instructions provided</li>
                                                  <% } %>
                                              </ol>
                                          </div>
                                      </p>
                                  </div>
                              </div>
                          </div>
                      </div>
                  <% }) %>
