                            <input type="hidden" name="redirectTo" value="<%= currentPage %>">
                            
                            <div class="form-group mb-3">
                              <label class="pb-2" for="recipeTitle">Recipe Title</label>
                              <input type="text" class="form-control" id="recipeTitle" name="title" required>
                            </div>
                            
                            <div class="form-group mb-3">
                              <label class="pb-2" for="User">Recipe By</label>
                              <input type="text" class="form-control" id="User" name="username" required>
                            </div>
                            
                            <div class="form-group mb-3">
                              <label class="pb-2" for="recipeDescription">Recipe Ingredients</label>
                              <textarea class="form-control" id="recipeDescription" name="ingredient" rows="3" placeholder="e.g., 2 cups of milk, 1 tbsp sugar, 1 tsp vanilla extract" required></textarea>
                              <small class="form-text text-muted">Separate ingredients with commas.</small>
                            </div>
                            
                            <div class="form-group mb-3">
                              <label class="pb-2" for="recipeInstruction">Recipe Instructions</label>
                              <textarea class="form-control" id="recipeInstruction" name="instruction" rows="3" placeholder="e.g., Heat the milk, Add sugar, Stir until dissolved" required></textarea>
                              <small class="form-text text-muted">Separate instructions with commas.</small>
                            </div>
                            
                            <div class="form-group mb-3">
                              <label class="pb-2" for="fileInput">Upload Photo</label>
                              <input type="file" class="form-control" id="fileInput" name="photo" accept="image/*" required>
